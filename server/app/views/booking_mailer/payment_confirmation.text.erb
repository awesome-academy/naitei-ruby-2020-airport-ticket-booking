<%= t ".hello" %>
<%= t ".confirmation" %>

<%= t ".total_price" %>: <%= @total_price %>
<%= t ".payment_method" %>: <%= @payment_method %>

<% @bookings.each do |booking| %>
  <%= t ".plane" %>: <%= booking.plane.name %>
  <%= t ".seat_number" %>: <%= booking.seat_number %>
  <%= t ".booking_name" %>: <%= booking.booking_name %>
  <%= t ".booking_dob" %>: <%= booking.booking_dob %>
  <%= t ".booking_nation" %>: <%= booking.booking_nation %>
  <%= t ".price" %>: <%= booking.total_price %>
  <%= t ".seat_type" %>: <%= booking.seat_type_name %>
  <%= t ".booking_status" %>: <%= booking.booking_status_name %>
<% end %>

<%= t ".cash_payment" if @payment_method == Settings.payment_methods.cash %>
<%= t ".incorrect" %>
